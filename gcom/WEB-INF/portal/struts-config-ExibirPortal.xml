<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<global-forwards />

	<action-mappings>
		<action type="gcom.gui.portal.ExibirPortalAction"
			validate="false"
			scope="session"
			path="/portal">

			<forward name="exibir" path="/jsp/portal/index.jsp" />
			<forward name="servicoDeclaracaoAnual" path="/jsp/portal/emitir_declaracao_anual_quitacao_debito.jsp" />

		</action>
	</action-mappings>

	<message-resources null="false" parameter="gcom.properties.application" />
</struts-config>

